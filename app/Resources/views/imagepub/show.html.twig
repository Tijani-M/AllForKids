{% extends 'dashboard.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Media Gallery <small> gallery design </small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <div class="row">

                    <p>Media gallery design emelents</p>

                    <div class="col-md-55">
                        <div class="thumbnail">
                            <div class="image view view-first">

                                <img src="{{ vich_uploader_asset(imagePub, 'imageFile') }}" alt="{{ imagePub.imageName }}" />

                                <div class="mask">
                                    <p>{{ imagePub.id  }}</p>

                                </div>
                            </div>
                            <div class="caption">
                                <p>{{ imagePub.description }}</p>
                            </div>
                        </div>

</div>
                </div>
            </div></div>




<div class="x_panel" align="auto">
    <table id="datatable" class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Updatedat</th>
                <td>{% if imagePub.updatedAt %}{{ imagePub.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imagepub_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('imagepub_edit', { 'id': imagePub.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

</div>
{% endblock %}
