{% extends 'dashboard.html.twig' %}

{% block body %}

<div class="title_left">
    <h1 align="center">Liste Des Jardins D'enfants</h1>
</div>

<div class="x_panel" align="auto">
    <div class="x_title">
        <div class="clearfix">
            <div>
                <h2 align="center"><u>liste Des Jardins D'enfants et crèches autorisès </u> : <small>Détails</small></h2>
            </div>
            <ul class="nav navbar-right ">
                <a href="{{ path('jardins_new') }}"><i class="fa fa-save"></i>nouvelle Jardin</a>
            </ul>


            <div class="x_content">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>

                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Tel</th>
                        <th>Adresse</th>
                        <th>Lien</th>
                        <th>Image</th>
                        <th>Updatedat</th>
                        <th>Actions</th>
                    </tr>

                    </thead>
                    <tbody>
                    {% for jardin in jardins %}
                        <tr>
                            <td><a href="{{ path('jardins_show', { 'id': jardin.id }) }}">{{ jardin.id }}</a></td>
                            <td>{{ jardin.nom }}</td>
                            <td>{{ jardin.tel }}</td>
                            <td>{{ jardin.adresse }}</td>
                            <td>{{ jardin.lien }}</td>
                            <td>{{ jardin.image }}</td>
                            <td>{% if jardin.updatedAt %}{{ jardin.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('jardins_show', { 'id': jardin.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('jardins_edit', { 'id': jardin.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>
{% endblock %}
